import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Ingresa un número entero (positivo o negativo) de hasta 5 dígitos: ");
        int numero = scanner.nextInt();
        
        //positivo
        int numeroAbsoluto = Math.abs(numero);
        
        //convertir a cadena
        String numeroStr = Integer.toString(numeroAbsoluto);
        
        int longitud = numeroStr.length();

        boolean esNegativo = numero < 0;
        
        if (longitud <= 5) {
            if (esNegativo) {
                System.out.println("El número ingresado (" + numero + ") tiene " + longitud + " dígitos y es negativo.");
            } else {
                System.out.println("El número ingresado (" + numero + ") tiene " + longitud + " dígitos y es positivo.");
            }
        } else {
            System.out.println("El número ingresado tiene más de 5 dígitos");
        }
        
        scanner.close();
    }
}
